{
  "settings": {
    "index.number_of_shards": 5,
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "index.queries.cache.enabled": false
  },
  "mappings": {
    "content": {
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "dynamic": "strict",
      "_all": {
        "enabled": false
      },
      "properties": {
        "body": {
          "type": "text",
          "analyzer": "english"
        }
      }
    },
    "percolator": {
      "dynamic": "strict",
      "_all": {
        "enabled": false
      },
      "properties": {
        "query": {
          "type": "percolator"
        }
      }
    }
  }
}