{
  "mappings": {
    "articles": {
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "dynamic": "strict",
      "_all": {
        "enabled": false
      },
      "properties": {
        "name": {
          "type": "string",
          "index": "not_analyzed"
        },
        "journal": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "volume": {
          "type": "string"
        },
        "issue": {
          "type": "string"
        },
        "accession": {
          "type": "string",
          "index": "not_analyzed"
        },
        "timestamp": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss"
        },
        "pmid": {
          "type": "integer"
        },
        "body": {
          "type": "string"
        }
      }
    }
  }
}